@model IEnumerable<KOODLE.Models.posts>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.post_titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post_txt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post_like)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.post_titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post_txt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post_like)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.post_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.post_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.post_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
